@using Albertslund;
@model ViewModel
@{
    ViewData["Title"] = "Account Information";
}



<div id="accountSection" class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <img id="avatar" src="https://www.acumarketing.com/acupuncture-websites/wp-content/uploads/2020/01/anonymous-avatar-sm.jpg" alt="avatar" />
            <p>Username: @Html.DisplayFor(model => model.user.username)</p>
            <p>Password: @Html.DisplayFor(model => model.user.password)</p>
        </div>
        <div id="acountInformationSection" class="col-sm-8">
            <div id="contactInfo">
                <h3 class="sectionHeadder">Contact Information</h3>
                <p>Phone: @Html.DisplayFor(model => model.userContact.phone)</p>
                <p>Email: @Html.DisplayFor(model => model.userContact.email)</p>
                <p>Social Media: @Html.DisplayFor(model => model.userContact.social_media)</p>
            </div>
            <div id="addressInfo">
                <h3 class="sectionHeadder">Address Information</h3>
                <p>Street: @Html.DisplayFor(model => model.userAddress.street_name)</p>
                <p>ZIP: @Html.DisplayFor(model => model.userAddress.ZIP)</p>
                <p>Region: @Html.DisplayFor(model => model.userAddress.region)</p>
            </div>
            <div id="paymentInfo">
                <h3 class="sectionHeadder">Payment Information</h3>
                <p>Acc. No.: </p>
                <p>Bank Name: </p>
            </div>
            <div id="houseInfo">
                <h3 class="sectionHeadder">House Information</h3>
                <p>Type: @Html.DisplayFor(model => model.userHouse.house_type)</p>
                <p>Total Area: @Html.DisplayFor(model => model.userHouse.house_area) </p>
                <p>Heating System: @Html.DisplayFor(model => model.userHouse.heating_system) </p>
            </div>
        </div>
    </div>
</div>



